# Includes
source "app/dxnet_deadlock"

# DXNet path
DXNET_PATH=""

_cdepl_kill_application()
{
    local dxnet_path="$(cdepl_cluster_application_install_dir)/dxnet"
    local total_nodes=$(cdepl_cluster_get_alloc_node_count)
    
    cdepl_app_dxnet_init $dxnet_path $total_nodes
	cdepl_app_dxnet_node_cleanup 0 $((total_nodes - 1))
}